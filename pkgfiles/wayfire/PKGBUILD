pkgname=wayfire
pkgver=0.8.0
pkgrel=1
pkgdesc="3D wayland compositor"
arch=(x86_64)
url=https://wayfire.org
license=(custom:MIT)
depends=(cairo pango libjpeg libinput 'wlroots>=0.16')
makedepends=(wayland-protocols meson ninja cmake glm doctest)
conflicts=("${pkgname}-git")
source=("git+https://github.com/WayfireWM/${pkgname}")
sha256sums=('SKIP')

build() {
    cd "${srcdir}/wayfire/"
    arch-meson build \
    --buildtype=release \
    -Db_lto=true \
    -Duse_system_wfconfig=disabled \
    -Duse_system_wlroots=enabled \
    -Dxwayland=disabled
    ninja -C build
}

check() {
    meson test -C build
}

package() {
    cd "${srcdir}/wayfire"
    DESTDIR="${pkgdir}/" ninja -C build install
    install -Dm644 wayfire.desktop "${pkgdir}/usr/share/wayland-sessions/wayfire.desktop"
    install -Dm644 wayfire.ini "${pkgdir}/usr/share/doc/${pkgname}/wayfire.ini"
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
